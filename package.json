{
    "devDependencies": {
        "babel-eslint": "^8.0.0",
        "chai": "^4.1.0",
        "chai-as-promised": "^7.1.1",
        "eslint": "^4.3.0",
        "eslint-plugin-babel": "^4.1.1",
        "eslint-plugin-compat": "^2.0.0",
        "eslint-plugin-filenames": "^1.2.0",
        "eslint-plugin-flowtype": "^2.35.0",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.1.0",
        "flow-bin": "^0.54.1",
        "flow-typed": "^2.1.5",
        "husky": "^0.14.3",
        "lint-staged": "^4.0.2",
        "mocha": "^4.0.0",
        "nightwatch": "^0.9.16",
        "release": "^2.4.0",
        "sinon": "^4.0.0",
        "sinon-chai": "^2.12.0"
    },
    "scripts": {
        "start": "docker-compose up -d",
        "test":
            "./node_modules/.bin/mocha $(find . -name '*test.js' ! -ipath '*node_modules*')  --opts 'test/unit/mocha.opts'",
        "e2e":
            "./node_modules/nightwatch/bin/nightwatch --config ./test/e2e/nightwatch.conf.js",
        "lint":
            "./node_modules/.bin/eslint client/app/* server/model/* server/schema/* jwt/index/*",
        "format":
            "./node_modules/.bin/prettier-eslint \"server/**/*.{js,jsx}\" \"client/**/*.{js,jsx}\" \"jwt/**/*.{js,jsx}\" \"index.js\" --write",
        "precommit": "npm run lint && npm run type-check",
        "prepush": "npm t",
        "type-check": "./node_modules/.bin/flow",
        "i-all":
            "npm i && cd client && npm i && cd .. && cd server && npm i && cd .. && cd jwt && npm i && cd ..",
        "nuke-modules":
            "rm -rf ./node_modules ./client/node_modules ./server/node_modules ./jwt/node_modules"
    }
}
